{
  "author": "Gary Johnson",
  "description": "This is a project used as a portfolio",
  "name": "api_backend_template",
  "version": "1.0.0",
  "main": "./src/bin/server.ts",
  "scripts": {
    "build": "npx tsc -p .",
    "start": "npx tsc -p . && npx node ./dist/bin/server.js",
    "start-pm2": "npx tsc -p . && npx pm2 start ./dist/bin/server.js -i 0",
    "stop-pm2": "npx pm2 stop all",
    "dev": "npx nodemon ./src/bin/server.ts",
    "dev-pm2": "npx pm2 start ./dist/bin/server.js --name app-dev --watch",
    "test:v1": "npx  mocha -r ts-node/register './tests/v1/**/*.test.ts'",
    "test:unit:v1": "npx mocha -r ts-node/register './tests/v1/unit/**/*.test.ts'",
    "test:functional:v1": "npx mocha -r ts-node/register './tests/v1/functional/**/*.test.ts'",
    "test:coverage:v1": "npx c8 npm run test:v1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "express": "^4.17.1",
    "helmet": "^7.1.0",
    "ip": "^1.1.5",
    "luxon": "^2.5.2",
    "mysql": "^2.18.1",
    "pm2": "^5.3.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.17",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.96",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "c8": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.14",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0"
  },
  "license": "ISC"
}
